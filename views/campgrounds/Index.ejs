<% include ../partials/header.ejs %>


<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to the Yelp Camp</h1>
            <p>Enjoy our hand-picked camps from all over the world</p>
            
            <p>
                <a class = "btn btn-primary btn-large" href = "/campground/new">click here to add new camp site</a>
            </p>
        </div>
    </header>
    
    <h4>The camp sites are</h4>
    
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% campings.forEach(function(e){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= e.Image%>">
                    <div class="caption">
                        <h4><%= e.Title %></h4>
                    </div>
                    <p>
                        <a href="/campground/<%= e._id%>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }) %>
    </div>
</div>    
<% include ../partials/footer.ejs %>